@page "/running"
<PageTitle>Data</PageTitle>

<h1>Data</h1>

@if (data == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Miles</th>
                <th>Speed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in data)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Minutes</td>
                    <td>@item.Miles</td>
                    <td>@item.Speed</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Shared.Running.RunCalcData[]? data = null;

    protected override async Task OnInitializedAsync()
    {

        await Task.Delay(5000).ConfigureAwait(false);
        data = [];
    }
}
